@model List<Whisky.Db.Entities.Product>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var product in Model)
{
    <div class="product">
        <div class="product-header">
            <a href="@Url.Action("Detail", new { id = product.Id })">
                <h3>@product.Name</h3>
            </a>
            <p>&hellip; @Html.Raw(product.PersonaDescription).</p>
        </div>
        <div class="product-content">
            <div class="product-image">
                <a href="@Url.Action("Detail", new { id = product.Id })">
                    <img src="@product.ImageUrl" alt="@product.Name" />
                </a>
            </div>
            <p>@product.ShortDescription</p>
        </div>
        <div class="button-and-price">
            <span class="product-price">@((int) product.Price) Kč <em>včetně DPH</em></span>
            <a class="btn btn-action" href="@Url.Action("Detail", new { id = product.Id })"><i class="ico ico-shopping-cart"></i> Detail</a>
        </div>
    </div>
}
<div class="clearfix"></div>