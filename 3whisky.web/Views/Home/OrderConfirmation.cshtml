@model Whisky.Db.Entities.Order

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    ga('require', 'ecommerce', 'ecommerce.js');
    ga('ecommerce:addTransaction', {
        id: '@Model.UniqueNumber',
        revenue: '@Model.TotalPrice',
    });
    ga('ecommerce:send');
</script>

<article>
<h2>Objednávka odeslána</h2>

<p>Děkujeme za nákup! Na zadaný email (@Model.Email) bylo odesláno potvrzení a doplňující informace.</p>

<p>
    @Html.ActionLink("Návrat na hlavní stránku", "Home", "Index")
</p>
</article>